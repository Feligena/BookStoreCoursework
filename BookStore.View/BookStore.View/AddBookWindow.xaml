                            <DataTemplate>
                                <TextBlock>
                                 <Run Text="{Binding Human.last_name}"/>
                                 <Run Text="{Binding Human.first_name}"/>
                                 <Run Text="{Binding Human.patronymic}"/>
                                </TextBlock>
